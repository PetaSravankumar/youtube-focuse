{
  "manifest_version": 3,
  "name": "YouTube Focus Mode",
  "version": "2.0",
  "description": "Hide YouTube distractions with Pomodoro timer",

  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],

  "host_permissions": [
    "https://*.youtube.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
